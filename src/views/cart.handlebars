<h1 class="mt-4">
    Carrito
</h1>

<div class="content">
    <div class="row">
        {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text"><small class="text-muted">{{this.category}}</small></p>
                        <p class="card-text"><strong>Precio: ${{this.price}}</strong></p>
                    </div> 
                </div>
            </div>
        {{/each}}
    </div>
</div>

<a href="http://localhost:8080/views/home"> Volver a Home </a>