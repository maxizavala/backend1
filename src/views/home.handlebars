<h1 class="mt-4">Productos</h1>

<div class="row">
    {{#each products}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><small class="text-muted">{{this.category}}</small></p>
                    <p class="card-text"><strong>Precio: ${{this.price}}</strong></p>
                </div>
            </div>
        </div>
    {{/each}}
</div>

<div class="pagination">
    {{#if hasPrevPage}}
        <a href="?page={{prevPage}}&limit=9">
            <img src="/images/prev-arrow.png" />
        </a>
    {{/if}}

    <span> {{currentPage}} de {{totalPages}}</span>

    {{#if hasNextPage}}
        <a href="?page={{nextPage}}&limit=9">
            <img src="/images/next-arrow.png" class="rotate-180" />
        </a>
    {{/if}}
</div>